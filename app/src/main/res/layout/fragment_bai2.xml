<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.bai2.Bai2Frag">

    <com.example.drawline.ui.drawView.Bai2View
        android:id="@+id/bai2View"
        android:layout_width="377dp"
        android:layout_height="535dp"
        android:layout_marginTop="16dp"
        android:background="#BE4444"
        android:backgroundTint="#B7F1E46F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startDraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Bắt đầu vẽ đường"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bai2View"
        app:layout_constraintVertical_bias="0.049" />

    <TextView
        android:id="@+id/bai2_console_tv"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.227"
        app:layout_constraintStart_toEndOf="@+id/startDraw"
        app:layout_constraintTop_toBottomOf="@+id/bai2View" />

    <Button
        android:id="@+id/rectDraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="bắt đầu vẽ hcn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bai2_console_tv" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="315dp"
        android:layout_height="28dp"
        android:layout_marginTop="32dp"
        android:text="Nhấn giữ vào đây để chọn nét vẽ"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>